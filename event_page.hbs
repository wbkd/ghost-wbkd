{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

<link rel="stylesheet" href="/assets/css/prism.css">
<script src="/assets/js/prism.js"></script>

{{> "header"}}


<main id="content" class="content clearfix" role="main">

    <div id="article" class="box {{#if image_url}}has-image{{/if}}">
        {{#if image_url}}<!-- <div class="image-wrapper"> -->
            <img src="{{image_url}}" class="event-image"/><!-- </div> -->
        {{/if}}
    
    <article class="post {{post_class}}">

        <header class="post-header">
            <h1 class="post-title">{{title}}</h1>
        </header>

        <section class="post-content">
            <p>{{{agenda}}}</p>
            
            <p>{{{social}}}</p>
        </section>

        <section> <!-- class="post-footer" -->   
            <h4>Деталі</h4>        
            <!-- class="event-meta" -->
                <b>Дата і час:</b>
                <time datetime="{{date format='YYYY-MM-DD'}}"> <!-- class="post-date" -->
                    {{#if only_date }}
                        {{strftime source='when_start' format='%d.%m %a' }}
                    {{ else }}
                        {{strftime source='when_start' format='%d.%m %a %H:%M' }}
                    {{/if}}
                    {{#if when_end }}
                    —
                        {{#if only_date }}
                            {{strftime source='when_end' format='%d.%m %a' }}
                        {{ else }}
                            {{strftime source='when_end' format='%d.%m %a %H:%M' }}
                        {{/if}}
                    {{/if}}
                </time><br/>
                <!--<span class="author">by {{author}}</span>-->

            
            {{#if place}}<span class="author-location icon-location"><b>Місце:</b> <a href ="https://www.google.com/maps?q={{place}}">{{place}}</a></span>{{/if}}<br/>
            {{#if level}}<b>Складність:</b> {{level}}{{/if}}<br/>
            <br/>
<!-- Можна причепити рахувальник кількості переходів -->
             {{#if registration_url}}<p><input class="author-link icon-link" style="width:200px;height:50px;font-weight:bold" value="Реєстрація" type="button" onclick="window.open('{{registration_url}}'); return false;" /></p>{{/if}}
        </section>


    </article>
</div>

<div id="sidebar">{{> "sidebar"}}</div>

</main>
